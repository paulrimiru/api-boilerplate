{
  "name": "school-api",
  "version": "1.0.0",
  "description": "small api for a school management system",
  "main": "src/server.js",
  "scripts": {
    "postinstall": "tsc",
    "start": "yarn run base:start src/server.ts",
    "start:dev": "yarn run base:start src/server.ts",
    "start:dev:watch": "NODE_ENV=development nodemon",
    "base:test": "NODE_ENV=test nyc --reporter=text-lcov mocha --require tsconfig-paths/register --require ts-node/register",
    "base:start": "ts-node --files -T --project ./tsconfig.json -r tsconfig-paths/register -r dotenv/config",
    "test": "yarn run base:test \"./src/**/*.spec.ts\" --watch-extensions ts --exit",
    "test:coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "tslint --project . --fix",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/PaulKariukiRimiru/school-api.git"
  },
  "author": "Paul Rimiru",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PaulKariukiRimiru/school-api/issues"
  },
  "homepage": "https://github.com/PaulKariukiRimiru/school-api#readme",
  "dependencies": {
    "@types/chai": "^4.1.7",
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "@types/mongoose": "^5.3.23",
    "@types/mongoose-unique-validator": "^1.0.1",
    "@types/node": "^11.11.3",
    "@types/redis": "^2.8.11",
    "@types/sinon": "^7.0.10",
    "@types/supertest": "^2.0.7",
    "@types/swagger-ui-express": "^3.0.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "fp-ts": "^1.15.0",
    "mocha": "^6.0.2",
    "mongoose": "^5.4.19",
    "mongoose-unique-validator": "^2.0.2",
    "nodemon": "^1.18.10",
    "sinon": "^7.3.0",
    "supertest": "^4.0.2",
    "swagger-ui-express": "^4.0.2",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "tslint-microsoft-contrib": "^6.1.0",
    "typescript": "^3.3.4000",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "5.0.0-alpha.7",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.3.0",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "ts-node-dev": "^1.0.0-pre.32",
    "tsconfig-paths": "^3.8.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/setup.ts",
      "src/seeders/",
      "src/server.ts"
    ]
  }
}
